<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout_activity_main">

    <include
        layout="@layout/layout_activity_main_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_activity_main"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        app:headerLayout="@layout/layout_header_navigation_activity_main"
        app:menu="@menu/menu_navigation_activity_main"
        android:layout_gravity = "start">
    </android.support.design.widget.NavigationView>






</android.support.v4.widget.DrawerLayout>